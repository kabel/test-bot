{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./out",
		"sourceMap": true
    },
    "include": [
		"src/**/*"
	]
}
